{
  "name": "synapse",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev:wsl": "NODE_OPTIONS='--max-old-space-size=6144' NEXT_PRIVATE_SKIP_TRACE=1 WATCHPACK_POLLING=true next dev --turbo",
    "dev:fast": "NODE_OPTIONS='--max-old-space-size=4096' NEXT_PRIVATE_SKIP_TRACE=1 next dev --turbo",
    "dev:minimal": "NODE_OPTIONS='--max-old-space-size=4096' next -c next.config.dev.js dev",

    "dev:speed": "NODE_OPTIONS='--max-old-space-size=8192' NEXT_PRIVATE_SKIP_TRACE=1 NEXT_TELEMETRY_DISABLED=1 WATCHPACK_POLLING=true next dev --turbo",
    "dev:lightning": "NODE_OPTIONS='--max-old-space-size=4096' NEXT_PRIVATE_SKIP_TRACE=1 NEXT_TELEMETRY_DISABLED=1 NEXT_CONFIG_FILE=next.config.speed.js next dev",
    "dev:benchmark": "time npm run dev:lightning",

    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.39.0",
    "next": "^15",
    "posthog-js": "^1.266.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "^15",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
