# Development-specific environment variables for faster performance
NODE_ENV=development

# Next.js development optimizations
NEXT_PRIVATE_SKIP_TRACE=true
NEXT_PRIVATE_DISABLE_STATIC_IMAGES=true

# Turbopack optimizations
TURBOPACK=1
NEXT_TELEMETRY_DISABLED=1
TURBOPACK_EXPERIMENTAL_PERSISTENT_CACHE=1
TURBOPACK_CACHE_DIR=.next/cache/turbopack

# WSL2 optimizations
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true

# Advanced performance flags for Next.js 15.5+
NEXT_PRIVATE_TURBOPACK_MEMORY_LIMIT=8192
NEXT_PRIVATE_SKIP_VALIDATION=true
NEXT_PRIVATE_EXPERIMENTAL_DEV_CACHE=true